{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": [
        "env.d.ts",
        "src/**/*",
        "src/**/*.vue",
        "userscript.js",
        "node_modules/types-mediawiki/index.d.ts"
    ],
    "exclude": [
        "src/**/__tests__/*"
    ],
    "compilerOptions": {
        "composite": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/*",
            ]
        },
        "types": ["types-mediawiki"],
        "typeRoots": [
            "./node_modules/@types"
        ]
    }
}
